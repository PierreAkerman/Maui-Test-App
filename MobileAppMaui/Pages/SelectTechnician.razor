@page "/SelectTechnician"
@using MobileAppMaui.Models
@using MobileAppMaui.Services
@inject ITechnicianService TechnicianService
@inject NavigationManager Navigation

<h3>SelectTechnician</h3>

@if (technicians == null)
{
    <p>Loading...</p>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var technician in technicians)
            {
                    <tr @onclick="@(()=>DisplayOption(technician))">
                    <td>@technician.Name</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}


@code {

    public IEnumerable<TechnicianModel> technicians;

    protected override async Task OnInitializedAsync()
    {
        technicians = await TechnicianService.GetAllTechnicians();
    }

    private void DisplayOption(TechnicianModel technician)
    {
        Navigation.NavigateTo($"MyErrands/{ technician.Id.ToString() }");
    }
}
