@page "/GetErrandByTechnicianId"
@using MobileAppMaui.Services
@using MobileAppMaui.Data
@inject IErrandService ErrandService;

<h3>GetErrandByTechnicianId</h3>


@if (errands == null)
{
    <p>Loading...</p>
}
else
{
    <div class="table-responsive">
       
        <table class="table">
            <tbody>
                @foreach (var errand in errands)
                {
                    <tr>
                        <th>Title</th>
                        <td>@errand.Title</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>@errand.Description</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            <select class="form-control" @bind="@SelectedStatus">
                                @foreach(var status in StatusList)
                                {
                                    <option value="@status.ToString()">@status.ToString()</option>
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>Last edited</th>
                        <td>@errand.LastEdited.ToString("d")</td>
                    </tr>
                    <tr>
                        <th>Created at</th>
                        <td>@errand.CreatedAt.ToString("d")</td>
                    </tr>
                    <tr>
                        <th>Created by</th>
                        <td>@errand.CreatedBy</td>
                    </tr>
                    <tr>
                        <th>Technician</th>
                        <td>@errand.Technician.Name</td>
                    </tr>
                <tbody>
                    <tr>
                        <th>Comments</th>
                    </tr>
                        @foreach (var comment in errand.Comments)
                        {
                        <tr class="d-flex flex-column">
                            <td>
                                    @comment.PostedAt.ToString("d") - @comment.Author
                                <br>
                                    @comment.Content
                            </td>
                        </tr>
                        }
                </tbody>
                }
            </tbody>
        </table>
      </div> 
      
      <button type="submit" @onclick="UpdateErrand" class="mt-2 btn btn-primary">Submit</button>
}

@code {
    IEnumerable<ErrandModel> errands;
    private string SelectedStatus;

    List<ErrandStatus> StatusList = Enum.GetValues(typeof(ErrandStatus)).Cast<ErrandStatus>().ToList();


    protected override async Task OnInitializedAsync()
    {
        errands = await ErrandService.GetErrandsByTechnicianIdAsync("4d91ae92-e9cd-4af1-bb33-432ce12d5864");
    }

    public async void UpdateErrand()
    {
        
        //await ErrandService.UpdateErrandStatus()
        //Checks if the method is envoked
        await App.Current.MainPage.DisplayAlert("Button Click Invoke", "Button Clicked", "Ok");
    }
}
